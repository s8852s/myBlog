<h1>文章列表</h1>
<%= flash[:notice] %>

<%= link_to "發表文章", new_post_path %>

<table>
    <thead>
        <tr>
            <td>文章標題</td>
            
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= link_to post.title, post_path(post) %></td>
            <td>
                <%= link_to "編輯文章", edit_post_path(post) %>
                <%= link_to "刪除文章", post_path(post), method: "delete", data: {comfirm: "確定要刪除文章嗎?" } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>